        >
        </a-videosphere> -->
        <!-- <a-passthrough width="16" height="9"></a-passthrough> -->

        <a-camera
            user-height="0"
            wasd-controls-enabled="false"
            arrow-key-rotation
        >
            <!-- Text element for display messaging.  Hide once video is playing. -->
